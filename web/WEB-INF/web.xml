<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>pl.servlets.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>pl.servlets.auth.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>pl.servlets.auth.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Hotels</servlet-name>
        <servlet-class>pl.servlets.hotel.HotelsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hotels</servlet-name>
        <url-pattern>/hotels</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Privileges</servlet-name>
        <servlet-class>pl.servlets.admin.PrivilegesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Privileges</servlet-name>
        <url-pattern>/privileges</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>pl.servlets.auth.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Token</servlet-name>
        <servlet-class>pl.servlets.auth.TokenController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Token</servlet-name>
        <url-pattern>/token</url-pattern>
    </servlet-mapping>
</web-app>